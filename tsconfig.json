{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "types": ["react", "react-dom"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
